{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ES2023"],
    "target": "ES2023",
    "module": "preserve",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}